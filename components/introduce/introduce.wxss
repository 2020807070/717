/* components/introduce.wxss */

.introduce {
  width: 100%;
  padding: 20rpx;
}

.tit {
  font-weight: 600;
  color: #424242;
  font-size: 22px;
}

.slogan {
  margin: 6px 0;
  font-size: 12px;
  color: #383838;
}

.tags {
  border-radius: 1px solid #ccc;
}

.tags van-tag {
  margin-right: 5px;
}

.video {
  font-size: 12px;
}

.detail {
  border-top: 1px solid #f4f4f4;
  margin-top: 10px;
  padding-top: 10px;
  font-size: 14px;
  display: flex;
  flex-wrap: wrap;
  color: #262626;
}

.detail text {
  padding: 6px 0;
  flex-basis: 50%;
}

.detail .detail-tit {
  color: #a3a3a3;
  font-size: 14px;
  padding-right: 10px;
}
