swiper {
  height: 500rpx;
  position: relative;
  background: red;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.swiper-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  color: #fff;
  background: linear-gradient(rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.1) 50%, rgba(0, 0, 0, 0.3) 100%);
}

.swiper-footer view {
  width: 20%;
}
